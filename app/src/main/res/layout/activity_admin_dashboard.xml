<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang Admin"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#0F1C3F"
            android:layout_marginBottom="32dp" />

        <!-- Quản lý Người dùng -->
        <include
            layout="@layout/admin_card_button"
            android:id="@+id/cardUsers"
            android:tag="👤|Quản lý Người dùng|#4FC3F7|#0F1C3F"
            android:layout_marginBottom="16dp" />

        <!-- Quản lý Đơn hàng -->
        <include
            layout="@layout/admin_card_button"
            android:id="@+id/cardOrders"
            android:tag="📄|Quản lý Đơn hàng|#FF8A65|#0F1C3F"
            android:layout_marginBottom="16dp" />

        <!-- Quản lý Sản phẩm -->
        <include
            layout="@layout/admin_card_button"
            android:id="@+id/cardProducts"
            android:tag="📦|Quản lý Sản phẩm|#FFD54F|#0F1C3F"
            android:layout_marginBottom="16dp" />

        <!-- Quản lý Danh mục -->
        <include
            layout="@layout/admin_card_button"
            android:id="@+id/cardCategories"
            android:tag="📁|Quản lý Danh mục|#4DB6AC|#0F1C3F"
            android:layout_marginBottom="16dp" />

        <!-- Đăng xuất -->
        <include
            layout="@layout/admin_card_button"
            android:id="@+id/cardLogout"
            android:tag="🚪|Đăng xuất|#EF5350|#B71C1C"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
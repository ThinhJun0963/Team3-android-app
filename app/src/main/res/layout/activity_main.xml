<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:text="Chào mừng đến với ứng dụng!"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingVertical="12dp"
            android:text="Cập nhật Hồ sơ"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="12dp"
            app:rippleColor="?attr/colorPrimaryContainer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingVertical="12dp"
            android:text="Cập nhật Tài khoản"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="12dp"
            app:rippleColor="?attr/colorPrimaryContainer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProductList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingVertical="12dp"
            android:text="Xem Sản phẩm"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="12dp"
            app:rippleColor="?attr/colorPrimaryContainer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="Đăng xuất"
            android:textColor="?attr/colorError"
            android:textSize="16sp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="12dp"
            app:rippleColor="?attr/colorErrorContainer"
            app:strokeColor="?attr/colorError" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>